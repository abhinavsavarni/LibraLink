    }

    .footer .footer-social {
        margin-top: 0.7rem;
    }

    .footer .footer-social a {
        color: #FFD166;
        margin-right: 0.7rem;
        font-size: 1.3rem;
        transition: color 0.2s;
    }

    .footer .footer-social a:last-child {
        margin-right: 0;
    }

    .footer .footer-social a:hover {
        color: #fff;
    }

    .footer .footer-copyright {
        text-align: center;
