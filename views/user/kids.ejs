<%- include('../layout/user_header') %>
    <style>
        body {
            background: #f8f5f0;
            min-height: 100vh;
        }

        .kids-container {
            padding: 20px 0 40px 0;
            min-height: 100vh;
        }

        .kids-header {
            text-align: center;
            margin-bottom: 40px;
            padding: 24px 18px 18px 18px;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 2px 16px 0 rgba(44, 62, 80, 0.07);
        }

        .kids-header h1 {
            color: #1a2233;
            font-family: 'Georgia', serif;
            font-size: 2.1rem;
            margin-bottom: 8px;
            letter-spacing: 1px;
            text-shadow: none;
        }

        .kids-header p {
            color: #444;
            font-size: 1.08rem;
            font-family: 'Inter', 'Segoe UI', 'Arial', sans-serif;
        }

        .book-card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 32px;
            padding: 10px 10px 0 10px;
        }

        .card {
            background: #fff;
            border: 1.5px solid #e0e0e0;
            border-radius: 14px;
            box-shadow: 0 2px 16px 0 rgba(44, 62, 80, 0.07);
            overflow: hidden;
            transition: box-shadow 0.2s, transform 0.2s;
            width: 310px;
            min-height: 420px;
            position: relative;
        }

        .card:hover {
            box-shadow: 0 8px 32px 0 rgba(44, 62, 80, 0.13);
            transform: translateY(-6px) scale(1.02);
        }

        .card-img-top {
            height: 210px;
            object-fit: cover;
            border-bottom: 1.5px solid #e0e0e0;
            background: #f8f5f0;
        }

        .card-body {
            padding: 22px 18px 18px 18px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            min-height: 220px;
        }

        .card-title {
            color: #1a2233;
            font-family: 'Georgia', serif;
            font-size: 1.12rem;
            margin-bottom: 10px;
            font-weight: 700;
            line-height: 1.3;
            min-height: 2.2em;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .card-text {
            color: #444;
            margin-bottom: 8px;
            font-size: 0.98rem;
            font-family: 'Inter', 'Segoe UI', 'Arial', sans-serif;
        }

        .card-text strong {
            color: #234567;
        }

        .btn-info {
            background: #234567;
            border: none;
            color: #fff;
            font-weight: 600;
            border-radius: 10px;
            padding: 0.6rem 1.1rem;
            font-size: 1.01rem;
            margin-right: 8px;
            margin-top: 8px;
            box-shadow: 0 2px 8px 0 rgba(44, 62, 80, 0.07);
            transition: background 0.2s, color 0.2s, box-shadow 0.2s, transform 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 0.5em;
        }

        .btn-info:hover {
            background: #16304a;
            color: #fff;
            box-shadow: 0 4px 16px 0 rgba(44, 62, 80, 0.13);
            transform: scale(1.06);
        }

        .age-badge {
            background: #f8f5f0;
            color: #234567;
            padding: 6px 14px;
            border-radius: 14px;
            font-size: 0.98rem;
            font-family: 'Inter', 'Segoe UI', 'Arial', sans-serif;
            margin-bottom: 12px;
            font-weight: 600;
            box-shadow: 0 2px 8px 0 rgba(44, 62, 80, 0.07);
            letter-spacing: 1px;
            display: inline-block;
        }

        @media (max-width: 700px) {
            .book-card-container {
                gap: 18px;
            }

            .card {
                width: 95vw;
                min-width: 0;
            }
        }
    </style>

    <div class="kids-container">
        <div class="kids-header">
            <h1>üìö Kids Corner üìö</h1>
            <p>Discover magical stories and exciting adventures for young readers!</p>
        </div>

        <div class="book-card-container">
            <% books.filter(book=> book.book_category === 'Kids').forEach(book => { %>
                <div class="card">
                    <img src="/img/<%= book.book_img %>" class="card-img-top" alt="<%= book.book_name %>">
                    <div class="card-body">
                        <span class="age-badge">Ages 5-12</span>
                        <h5 class="card-title">
                            <%= book.book_name %>
                        </h5>
                        <p class="card-text"><strong>Author:</strong>
                            <%= book.book_author %>
                        </p>
                        <p class="card-text"><strong>Price:</strong> ‚Çπ<%= book.book_price %>
                        </p>
                        <button class="btn btn-info" onclick="viewBook('<%= book.book_id %>')">
                            <span>üîç</span> View Details
                        </button>
                        <button class="btn btn-info"
                            onclick="addToCart('<%= book.book_id %>', '<%= book.book_name %>')">
                            <span>üõí</span> Add to Cart
                        </button>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/index.js"></script>
    <%- include('../layout/user_footer') %>